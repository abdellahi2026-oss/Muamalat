
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------------------
    // Helper Functions
    // --------------------------------------------------------------------------------

    /**
     * Checks if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the authenticated user's UID matches the provided userId.
     * This is the primary function for enforcing document ownership.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    /**
     * Checks if the user has the 'admin' role.
     * It reads the user's role from their profile document in /users.
     */
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --------------------------------------------------------------------------------
    // User Profile Management
    // --------------------------------------------------------------------------------
    
    /**
     * @description Users can manage their own profiles. Admins can manage any user profile.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) || isAdmin(); // Allow admin to create users
      allow update: if isOwner(userId) || isAdmin(); // A user can update their own profile, or an admin can.
      allow list: if isAdmin(); // Only admins can list all users.
      allow delete: if false; // Disallow deletion of user profiles for data integrity.
    }

    // --------------------------------------------------------------------------------
    // Merchant-Owned Data (Clients, Products, Transactions)
    // --------------------------------------------------------------------------------

    /**
     * @description Secures a merchant's clients subcollection.
     * @path /users/{userId}/clients/{clientId}
     */
    match /users/{userId}/clients/{clientId} {
      allow read, list: if isOwner(userId);
      // Allow write if user is the owner and the data being written has the correct ownerId.
      allow write: if isOwner(userId) && request.resource.data.ownerId == userId;
    }

    /**
     * @description Secures a merchant's products subcollection.
     * @path /users/{userId}/products/{productId}
     */
    match /users/{userId}/products/{productId} {
      allow read, list: if isOwner(userId);
      allow write: if isOwner(userId) && request.resource.data.ownerId == userId;
    }

    /**
     * @description Secures a merchant's transactions subcollection.
     * @path /users/{userId}/transactions/{transactionId}
     */
    match /users/{userId}/transactions/{transactionId} {
      allow read, list: if isOwner(userId);
      allow write: if isOwner(userId) && request.resource.data.ownerId == userId;
    }
  }
}
